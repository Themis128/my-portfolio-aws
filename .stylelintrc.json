{
  "ignoreFiles": [
    "**/*",
    "!globals.css"
  ],
  "rules": {
    "at-rule-no-unknown": [
      true,
      {
        "ignoreAtRules": [
          "tailwind",
          "apply",
          "variants",
          "responsive",
          "screen",
          "layer",
          "theme",
          "plugin",
          "custom-variant",
          "source"
        ]
      }
    ],
    "property-no-unknown": [
      true,
      {
        "ignoreProperties": [
          "/^--/"
        ]
      }
    ]
  }
}