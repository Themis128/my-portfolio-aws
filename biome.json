{
  "$schema": "https://biomejs.dev/schemas/2.3.8/schema.json",
  "files": {
    "ignoreUnknown": false,
    "ignore": ["aws/**"],
    "includes": [
      "**",
      "!!**/.next",
      "!!**/node_modules",
      "!!**/build",
      "!!**/dist",
      "!!**/out",
      "!!**/*.generated.*",
      "!!**/*.d.ts",
      "!!**/*.js",
      "!!**/.turbo",
      "!!*.tsbuildinfo",
      "!!logs",
      "!!*.tar.gz",
      "!!*.zip",
      "!!archive",
      "!!external-repos",
      "!!magicui-main",
      "!!docker-backend",
      "!!registry/__index___backup.tsx"
    ]
  },
  "formatter": {
    "enabled": true,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "correctness": {
        "noUnusedVariables": "warn",
        "useExhaustiveDependencies": "warn"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "useConst": "error",
        "useImportType": "error",
        "noInlineStyles": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "error",
        "noExplicitAny": "warn"
      }
    }
  },
  "javascript": {
    "formatter": {
      "quoteStyle": "double",
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "trailingCommas": "es5"
    },
    "globals": ["React", "JSX"]
  },
  "css": {
    "formatter": {
      "enabled": true
    },
    "linter": {
      "enabled": true
    },
    "parser": {
      "cssModules": true,
      "tailwindDirectives": true
    }
  }
}
