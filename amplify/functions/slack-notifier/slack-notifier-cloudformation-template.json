{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudFormation template for slack-notifier function",
  "Parameters": {
    "env": { "Type": "String", "Default": "dev" },
    "functionName": { "Type": "String", "Default": "slack-notifier" },
    "s3Bucket": { "Type": "String" },
    "s3Key": { "Type": "String" }
  },
  "Resources": {
    "SlackNotifierFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": { "Fn::Sub": "${functionName}-${env}" },
        "Description": "Sends notifications to Slack",
        "Handler": "index.handler",
        "Runtime": "nodejs20.x",
        "Code": { "S3Bucket": { "Ref": "s3Bucket" }, "S3Key": { "Ref": "s3Key" } },
        "Role": { "Fn::GetAtt": [ "SlackNotifierFunctionRole", "Arn" ] },
        "Environment": {
          "Variables": {
            "SLACK_BOT_TOKEN": "",
            "SLACK_SSM_PARAM": "",
            "REGION": { "Ref": "AWS::Region" },
            "ENV": { "Ref": "env" }
          }
        },
        "Timeout": 10,
        "MemorySize": 128
      }
    },
    "SlackNotifierFunctionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": { "Version": "2012-10-17", "Statement": [ { "Effect": "Allow", "Principal": { "Service": "lambda.amazonaws.com" }, "Action": "sts:AssumeRole" } ] },
        "Path": "/",
        "ManagedPolicyArns": [ "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole" ],
        "Policies": [
          {
            "PolicyName": "SlackNotifierSSMPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [ "ssm:GetParameter", "ssm:GetParameters" ],
                  "Resource": {
                    "Fn::Sub": "arn:${AWS::Partition}:ssm:${AWS::Region}:${AWS::AccountId}:parameter/amplify/*"
                  }
                }
              ]
            }
          }
        ]
      }
    },
    "SlackNotifierFunctionLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": { "LogGroupName": { "Fn::Join": [ "", [ "/aws/lambda/", { "Ref": "SlackNotifierFunction" } ] ] }, "RetentionInDays": 30 }
    }
  },
  "Outputs": {
    "FunctionName": { "Description": "Name of the Lambda function", "Value": { "Ref": "SlackNotifierFunction" } },
    "FunctionArn": { "Description": "ARN of the Lambda function", "Value": { "Fn::GetAtt": [ "SlackNotifierFunction", "Arn" ] } }
  }
}
