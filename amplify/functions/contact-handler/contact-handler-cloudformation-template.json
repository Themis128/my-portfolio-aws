{
  "AWSTemplateFormatVersion": "2010-09-09",
  "Description": "CloudFormation template for contact-handler function",
  "Parameters": {
    "env": {
      "Type": "String",
      "Default": "dev"
    },
    "functionName": {
      "Type": "String",
      "Default": "contact-handler"
    },
    "s3Bucket": {
      "Type": "String"
    },
    "s3Key": {
      "Type": "String"
    },
    "buildMethod": {
      "Type": "String",
      "Default": "esbuild"
    },
    "authRoleName": {
      "Type": "String"
    },
    "unauthRoleName": {
      "Type": "String"
    }
  },
  "Resources": {
    "ContactHandlerFunction": {
      "Type": "AWS::Lambda::Function",
      "Properties": {
        "FunctionName": {
          "Fn::Sub": "${functionName}-${env}"
        },
        "Description": "Handler for contact form submissions",
        "Handler": "index.handler",
        "Runtime": "nodejs20.x",
        "Code": {
          "S3Bucket": {
            "Ref": "s3Bucket"
          },
          "S3Key": {
            "Ref": "s3Key"
          }
        },
        "Role": {
          "Fn::GetAtt": [
            "ContactHandlerFunctionRole",
            "Arn"
          ]
        },
        "Environment": {
          "Variables": {
            "SLACK_WEBHOOK_URL": "",
            "REGION": {
              "Ref": "AWS::Region"
            },
            "ENV": {
              "Ref": "env"
            }
          }
        },
        "Timeout": 30,
        "MemorySize": 1024
      }
    },
    "ContactHandlerFunctionRole": {
      "Type": "AWS::IAM::Role",
      "Properties": {
        "AssumeRolePolicyDocument": {
          "Version": "2012-10-17",
          "Statement": [
            {
              "Effect": "Allow",
              "Principal": {
                "Service": "lambda.amazonaws.com"
              },
              "Action": "sts:AssumeRole"
            }
          ]
        },
        "Path": "/",
        "ManagedPolicyArns": [
          "arn:aws:iam::aws:policy/service-role/AWSLambdaBasicExecutionRole",
          "arn:aws:iam::aws:policy/AmazonSESFullAccess",
          "arn:aws:iam::aws:policy/AWSLambdaExecute"
        ],
        "Policies": [
          {
            "PolicyName": "ContactHandlerDynamoDBPolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "dynamodb:PutItem",
                    "dynamodb:UpdateItem",
                    "dynamodb:GetItem",
                    "dynamodb:Scan",
                    "dynamodb:Query",
                    "dynamodb:DescribeTable"
                  ],
                  "Resource": [
                    {
                      "Fn::Join": [
                        "",
                        [
                          "arn:aws:dynamodb:",
                          {
                            "Ref": "AWS::Region"
                          },
                          ":",
                          {
                            "Ref": "AWS::AccountId"
                          },
                          ":table/Contact-*"
                        ]
                      ]
                    }
                  ]
                }
              ]
            }
          },
          {
            "PolicyName": "ContactHandlerLambdaInvokePolicy",
            "PolicyDocument": {
              "Version": "2012-10-17",
              "Statement": [
                {
                  "Effect": "Allow",
                  "Action": [
                    "lambda:InvokeFunction"
                  ],
                  "Resource": "*"
                }
              ]
            }
          }
        ]
      }
    },
    "ContactHandlerFunctionLogGroup": {
      "Type": "AWS::Logs::LogGroup",
      "Properties": {
        "LogGroupName": {
          "Fn::Join": [
            "",
            [
              "/aws/lambda/",
              {
                "Ref": "ContactHandlerFunction"
              }
            ]
          ]
        },
        "RetentionInDays": 30
      }
    }
  },
  "Outputs": {
    "FunctionName": {
      "Description": "Name of the Lambda function",
      "Value": {
        "Ref": "ContactHandlerFunction"
      }
    },
    "FunctionArn": {
      "Description": "ARN of the Lambda function",
      "Value": {
        "Fn::GetAtt": [
          "ContactHandlerFunction",
          "Arn"
        ]
      }
    },
    "Region": {
      "Description": "AWS Region",
      "Value": {
        "Ref": "AWS::Region"
      }
    },
    "LambdaExecutionRoleArn": {
      "Value": {
        "Fn::GetAtt": [
          "LambdaExecutionRole",
          "Arn"
        ]
      }
    }
  }
}