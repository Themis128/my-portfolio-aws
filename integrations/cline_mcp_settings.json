        {
          "name": "monitoring_dashboard_setup",
          "description": "Set up comprehensive monitoring and analytics for portfolio",
          "input_schema": {
            "type": "object",
            "properties": {
              "analytics_provider": {
                "type": "string",
                "enum": [
                  "google-analytics",
                  "plausible",
