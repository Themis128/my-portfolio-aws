{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "node",
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "include": ["src/**/*"],
  "exclude": [
    "node_modules",
    "src/graphql",
    "src/ui-components",
    "src/lib/graphql-client.ts",
    "src/mutations.ts",
    "src/queries.ts",
    "src/subscriptions.ts"
  ]
}
